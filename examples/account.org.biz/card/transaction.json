{
    "$id": "data://account.org.biz/model/1/transaction",
    "title": "Transaction",
    "type": "object",
    "description": "A financial transaction applied to an account.",
    "properties": {
        "transactionId": {
            "type": "string",
            "description": "Unique identifier for the transaction."
        },
        "accountNumber": {
            "$ref": "data://account.org.biz/model/1/account#/properties/accountNumber"
        },
        "amount": {
            "type": "number",
            "description": "The signed amount of the transaction (positive for credit, negative for debit)."
        },
        "currency": {
            "type": "string",
            "description": "Three-letter ISO currency code (e.g., 'USD', 'EUR')."
        },
        "transactionDate": {
            "type": "string",
            "description": "Date and time when the transaction occurred or was posted."
        },
        "description": {
            "type": "string",
            "description": "Free-form description of the transaction."
        },
        "transactionType": {
            "type": "string",
            "enum": ["deposit", "withdrawal", "payment", "fee", "interest", "adjustment"],
            "description": "Categorization of the transaction's purpose."
        },
        "counterpartyAccount": {
            "type": "string",
            "description": "Identifier for the counterparty account, if known."
        }
    }
}
